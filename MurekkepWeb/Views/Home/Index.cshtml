<!--Slider-->
<div id="slider">
    <div class="slide" style="background:dodgerBlue;">
        <img src="~/Content/images/1.png" />
    </div>

    <div class="slide" style="background:coral;">
        <img src="~/Content/images/2.png" />
    </div>

    <div class="slide" style="background:crimson;">
        <img src="~/Content/images/3.png" />
    </div>

    <div class="slide" style="background: #6edf10;">
        <img src="~/Content/images/4.png" />
    </div>

    <!--Controlling arrows-->
    <span class="controls" onclick="prevSlide(-1)" id="left-arrow">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
    <span class="controls" id="right-arrow" onclick="nextSlide(1)">
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
    </span>
</div>
<div id="dots-con">
    <span class="dot"></span><span class="dot"></span><span class="dot"></span><span class="dot"></span>
</div>



<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kategoriler</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="single.html">
                                <img src="@Html.DisplayFor(modelItem => item.ImageAdres)} " class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="single.html">@Html.DisplayFor(modelItem => item.Name)</a>
                                </h5>
                                <p class="card-text mb-3">@Html.DisplayFor(modelItem => item.Description)</p>
                                @Html.ActionLink("Ürünleri İncele", "Urunler", new { id = item.ID }, new { @class = "btn btn-primary read-m" })

                            </div>
                        </div>

                    }
                    <!--//left-->
                </div>
            </div>

            <br /><br />
            <h3>
                Son Yorumlar
            </h3>


        </div>


        <div class="row">
            @foreach (var item in ViewBag.Yorumlar)
            {



                <div class="col-sm-3" style="border: 1px solid lightgray; margin: 5px;">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@item.icerik</h5>
                            <p class="card-text">Verilen Puan: @item.yildiz</p>
                            @Html.ActionLink("Yoruma Git", "UrunYorum", new { id = item.productId }, new { @class = "btn btn-primary read-m" })
                        </div>
                    </div>
                </div>
            }
        </div>
</section>
<!--//main-->