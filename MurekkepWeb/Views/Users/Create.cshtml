@model MurekkepWeb.Models.User

@{
    ViewBag.Title = "Kayıt Ol";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()





    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Kayıt Ol</h3>
            <div class="row inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form action="#" method="post">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                          Kullanıcı Adı
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            İsim
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            Şifre
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control" , type = "password"} })
                                @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
                            </div>
                        </div>




                        <div class="form-group">
                           Mail Adresi
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.mailadres, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mailadres, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kayıt Ol" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--//main-->
}

<div>
</div>
